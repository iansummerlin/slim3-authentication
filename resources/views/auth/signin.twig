{% extends "templates/app.twig" %}
{% block title %}Signin{% endblock %}
{% block content %}
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-default">
                <div class="panel-heading">Sign In</div>
                <div class="panel-body">
                    <form action="{{ path_for('auth.signin') }}" method="POST" autocomplete="off">
                        <div class="form-group{{ errors.username ? ' has-error' : '' }}">
                            <label for="username">Username:</label>
                            <input type="text" name="username" id="username" placeholder="Your username..." class="form-control" value="{{ old.username }}" >
                            {% if errors.username %}
                                <span class="help-block">{{ errors.username | first }}</span>
                            {% endif %} 
                        </div>
                        <div class="form-group{{ errors.password ? ' has-error' : '' }}">
                            <label for="password">Password:</label>
                            <input type="password" name="password" id="password" placeholder="Your password..." class="form-control" value="{{ old.password }}">
                            {% if errors.password %}
                                <span class="help-block">{{ errors.password | first }}</span>
                            {% endif %} 
                        </div>
                        <button class="btn btn-default">Sign in</button>

                        {{ csrf.field | raw}}
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}