{% extends "templates/app.twig" %}
{% block title %}Signup{% endblock %}
{% block content %}
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-default">
                <div class="panel-heading">Sign Up</div>
                <div class="panel-body">
                    <form action="{{ path_for('auth.signup') }}" method="POST" autocomplete="off">
                        <div class="form-group{{ errors.name ? ' has-error' : '' }}">
                            <label for="name">Name:</label>
                            <input type="text" name="name" id="name" placeholder="Your name..." class="form-control" >
                            {% if errors.name %}
                                <span class="help-block">{{ errors.name | first }}</span>
                            {% endif %}                            
                        </div>
                        <div class="form-group{{ errors.surname ? ' has-error' : '' }}">
                            <label for="surname">Surname:</label>
                            <input type="text" name="surname" id="surname" placeholder="Your surname..." class="form-control" >
                            {% if errors.surname %}
                                <span class="help-block">{{ errors.surname | first }}</span>
                            {% endif %} 
                        </div>
                        <div class="form-group{{ errors.email ? ' has-error' : '' }}">
                            <label for="email">Email:</label>
                            <input type="email" name="email" id="email" placeholder="you@domain.com" class="form-control" >
                            {% if errors.email %}
                                <span class="help-block">{{ errors.email | first }}</span>
                            {% endif %} 
                        </div>
                        <div class="form-group{{ errors.username ? ' has-error' : '' }}">
                            <label for="username">Username:</label>
                            <input type="text" name="username" id="username" placeholder="Your username..." class="form-control" >
                            {% if errors.username %}
                                <span class="help-block">{{ errors.username | first }}</span>
                            {% endif %} 
                        </div>
                        <div class="form-group{{ errors.password ? ' has-error' : '' }}">
                            <label for="password">Password:</label>
                            <input type="password" name="password" id="password" placeholder="Your password..." class="form-control" >
                            {% if errors.password %}
                                <span class="help-block">{{ errors.password | first }}</span>
                            {% endif %} 
                        </div>
                        <button class="btn btn-default">Sign up</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}